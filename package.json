{
	"name": "bolao-server",
	"version": "1.0.0",
	"private": true,
	"dependencies": {
		"concurrently": "^9.1.2",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"mongoose": "^8.10.0",
		"morgan": "^1.10.0",
		"path": "^0.12.7"
	},
	"devDependencies": {
		"nodemon": "^3.1.9"
	},
	"scripts": {
		"start": "node server.js",
		"install": "cd frontend && npm install",
		"build": "cd frontend && npm run build",
		"server": "nodemon server.js",
		"client": "npm run dev --prefix frontend",
		"dev": "concurrently --kill-others \"npm run server\" \"npm run client\""
	}
}
